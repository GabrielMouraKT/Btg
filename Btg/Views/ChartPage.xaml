<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Btg.Views.ChartPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
    Title="ChartPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <charts:ChartView
            x:Name="myChart"
            Grid.Column="0"
            MaximumWidthRequest="1000"
            MinimumHeightRequest="300" />


        <StackLayout Grid.Column="1"
                     Margin="50,10">
            <Label Text="Preço inicial" />
            <Entry Placeholder="Preço Inicial" Text="{Binding PrecoInicial}" />
            <Label Text="Volatilidade" />
            <Entry Placeholder="Volatilidade" Text="{Binding Volatilidade}" />
            <Label Text="Média do Retorno" />
            <Entry Placeholder="Média do Retorno" Text="{Binding MediaRetorno}" />
            <Label Text="Tempo" />
            <Entry Placeholder="Tempo" Text="{Binding Tempo}" />

            <Button Clicked="GerarGraficoButton_Clicked" Text="Gerar Simulação" />
        </StackLayout>
    </Grid>
</ContentPage>
